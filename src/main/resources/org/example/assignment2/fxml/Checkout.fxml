<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.assignment2.controller.CheckoutController"
      spacing="20" alignment="CENTER" prefWidth="600" prefHeight="500"
      style="-fx-background-color: #f9f9f9; -fx-padding: 30;">

    <!-- Title Section -->
    <Label text="Checkout" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #c32c2c;" />

    <!-- Total Price Label -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label text="Total Price:" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <Label fx:id="totalPriceLabel" text="\$0.00" style="-fx-font-size: 18px;" />
    </HBox>

    <!-- Card Number Input -->
    <VBox spacing="10" alignment="CENTER_LEFT" prefWidth="500">
        <Label text="Card Number" style="-fx-font-size: 16px; -fx-text-fill: #2c3e50;" />
        <TextField fx:id="cardNumberField" promptText="Enter 16-digit card number" maxWidth="500" style="-fx-font-size: 14px;" />
    </VBox>

    <!-- Expiry Date and CVV in a Row -->
    <HBox spacing="20" alignment="CENTER_LEFT" prefWidth="500">
        <!-- Expiry Date -->
        <VBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Expiry Date (MM/YY)" style="-fx-font-size: 16px; -fx-text-fill: #2c3e50;" />
            <TextField fx:id="expiryDateField" promptText="MM/YY" maxWidth="150" style="-fx-font-size: 14px;" />
        </VBox>

        <!-- CVV -->
        <VBox spacing="10" alignment="CENTER_LEFT">
            <Label text="CVV" style="-fx-font-size: 16px; -fx-text-fill: #2c3e50;" />
            <TextField fx:id="cvvField" promptText="3-digit CVV" maxWidth="100" style="-fx-font-size: 14px;" />
        </VBox>
    </HBox>

    <!-- Error Message Display -->
    <Label fx:id="errorLabel" text="" textFill="red" style="-fx-font-size: 14px;" />

    <!-- Confirm Payment Button -->
    <Button text="Confirm Payment" onAction="#handleConfirmPayment" prefHeight="40.0" prefWidth="200.0"
            style="-fx-background-color: #c32c2c; -fx-text-fill: white; -fx-font-size: 16px;" />
</VBox>
