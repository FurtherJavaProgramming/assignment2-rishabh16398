<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.assignment2.controller.UpdateProductController"
      spacing="20" alignment="CENTER" prefWidth="600" prefHeight="500"
      style="-fx-background-color: #f4f4f4; -fx-padding: 20;">

    <!-- Page Title -->
    <Label text="Update Product" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #c32c2c;" />

    <!-- Product Name ComboBox -->
    <VBox spacing="10" alignment="CENTER_LEFT" prefWidth="500">
        <Label text="Product Name" style="-fx-font-size: 16px; -fx-text-fill: #2c3e50;" />
        <ComboBox fx:id="productNameComboBox" promptText="Select Product" maxWidth="500" style="-fx-background-color: white; -fx-font-size: 14px;" />
    </VBox>

    <!-- Product Price -->
    <VBox spacing="10" alignment="CENTER_LEFT" prefWidth="500">
        <Label text="Price" style="-fx-font-size: 16px; -fx-text-fill: #2c3e50;" />
        <TextField fx:id="productPriceField" promptText="Enter Product Price" maxWidth="500" style="-fx-background-color: white; -fx-font-size: 14px;" />
    </VBox>

    <!-- Stock Quantity -->
    <VBox spacing="10" alignment="CENTER_LEFT" prefWidth="500">
        <Label text="Stock Quantity" style="-fx-font-size: 16px; -fx-text-fill: #2c3e50;" />
        <TextField fx:id="productStockField" promptText="Enter Stock Quantity" maxWidth="500" style="-fx-background-color: white; -fx-font-size: 14px;" />
    </VBox>

    <!-- Buttons for Save and Back -->
    <HBox spacing="20" alignment="CENTER" prefWidth="500">
        <Button text="Save Changes" onAction="#handleSaveChanges" prefHeight="40.0" prefWidth="150.0"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 16px;" />
        <Button text="Back" onAction="#handleBackAction" prefHeight="40.0" prefWidth="150.0"
                style="-fx-background-color: #c32c2c; -fx-text-fill: white; -fx-font-size: 16px;" />
    </HBox>

</VBox>
