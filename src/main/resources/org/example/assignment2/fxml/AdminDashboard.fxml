<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="800.0"
            fx:controller="org.example.assignment2.controller.AdminDashboardController"
            style="-fx-background-color: #f4f4f4;">

    <!-- Center Section -->
    <center>
        <VBox spacing="20" alignment="CENTER" style="-fx-padding: 20;">

            <!-- Welcome Text -->
            <Text fx:id="welcomeText" text="Welcome, Admin" fill="#c32c2c" textAlignment="CENTER"
                  style="-fx-font-size: 28px; -fx-font-weight: bold;">
                <font>
                    <Font name="Baloo Bhai 2 ExtraBold" size="28"/>
                </font>
            </Text>

            <!-- Book Stock Title -->
            <Text text="Book Stock" fill="#c32c2c" textAlignment="CENTER" style="-fx-font-size: 24px;">
                <font>
                    <Font name="Baloo Bhai 2 ExtraBold" size="24"/>
                </font>
            </Text>

            <!-- TableView for Book Stock -->
            <TableView fx:id="booksTable" prefHeight="300" prefWidth="700" style="-fx-padding: 10;">
                <columns>
                    <TableColumn text="Title" prefWidth="200" cellValueFactory="${titleProperty}"/>
                    <TableColumn text="Author(s)" prefWidth="200" cellValueFactory="${authorsProperty}"/>
                    <TableColumn text="Price" prefWidth="100" cellValueFactory="${priceProperty}"/>
                    <TableColumn text="Sold Copies" prefWidth="100" cellValueFactory="${soldCopiesProperty}"/>
                    <TableColumn text="Stock" prefWidth="100" cellValueFactory="${stockProperty}"/>
                </columns>
            </TableView>

            <!-- HBox for Buttons -->
            <HBox spacing="20" alignment="CENTER">
                <!-- Update Stock Button -->
                <Button text="Update Stock" prefHeight="50.0" prefWidth="200.0"
                        style="-fx-background-color: #c32c2c; -fx-text-fill: white; -fx-font-size: 16px;">
                    <font>
                        <Font name="Baloo Bhai 2 ExtraBold" size="16"/>
                    </font>
                </Button>

                <!-- Logout Button -->
                <Button text="Logout" onAction="#handleLogout" prefHeight="50.0" prefWidth="200.0"
                        style="-fx-background-color: #c32c2c; -fx-text-fill: white; -fx-font-size: 16px;">
                    <font>
                        <Font name="Baloo Bhai 2 ExtraBold" size="16"/>
                    </font>
                </Button>
            </HBox>

        </VBox>
    </center>
</BorderPane>
